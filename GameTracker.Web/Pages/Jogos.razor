@page "/jogos"
@inject ApiClient Api
@using System.Text.Json.Serialization
@using GameTracker.Web.Converters

<h3 class="text-2xl font-bold mb-4">Lista de Jogos</h3>

<div class="flex gap-2 mb-4">
    <input @bind="filtroTitulo" placeholder="Filtrar por título" class="border rounded px-2 py-1" />
    <select @bind="filtroStatus" class="border rounded px-2 py-1">
        <option value="">Todos</option>
        <option value="0">Backlog</option>
        <option value="1">Jogando</option>
        <option value="2">Finalizado</option>
        <option value="3">Platinado</option>
    </select>
    <button class="bg-blue-600 text-white px-3 py-1 rounded" @onclick="BuscarJogos">Buscar</button>
</div>

@if (jogos == null)
{
    <p>Carregando jogos...</p>
}
else if (!jogos.Any())
{
    <p>Nenhum jogo encontrado.</p>
}
else
{
    <table class="min-w-full text-sm border border-gray-700">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="p-2 text-left">Título</th>
                <th class="p-2 text-left">Plataforma</th>
                <th class="p-2 text-left">Status</th>
                <th class="p-2 text-right">Nota</th>
                <th class="p-2 text-right">Horas</th>
                <th class="p-2 text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jogo in jogos)
            {
                <tr class="border-b border-gray-600 hover:bg-gray-700">
                    <td class="p-2">@jogo.Titulo</td>
                    <td class="p-2">@jogo.Plataforma</td>
                    <td class="p-2">@ObterStatus(jogo.Status)</td>
                    <td class="p-2 text-right">@jogo.Nota?.ToString("F1")</td>
                    <td class="p-2 text-right">@jogo.HorasJogadas</td>
                    <td class="p-2 text-center">
                        <button class="bg-yellow-500 text-white px-2 py-1 rounded" @onclick="() => EditarJogo(jogo)">
                            ✏️ Editar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (jogoEditando != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center">
        <div class="bg-white p-6 rounded-lg w-96">
            <h4 class="text-lg font-bold mb-3">Editar Jogo</h4>

            <div class="mb-2">
                <label class="block text-sm font-medium">Nota</label>
                <input type="number" step="0.1" class="border rounded w-full px-2 py-1"
                       @bind="jogoEditando.Nota" />
            </div>

            <div class="mb-2">
                <label class="block text-sm font-medium">Horas Jogadas</label>
                <input type="number" step="0.5" class="border rounded w-full px-2 py-1"
                       @bind="jogoEditando.HorasJogadas" />
            </div>

            <div class="mb-2">
                <label class="block text-sm font-medium">Comentários</label>
                <textarea class="border rounded w-full px-2 py-1" rows="3"
                      @bind="jogoEditando.Comentarios"></textarea>
            </div>

            <div class="flex justify-end gap-2">
                <button class="bg-gray-400 px-3 py-1 rounded" @onclick="CancelarEdicao">Cancelar</button>
                <button class="bg-blue-600 text-white px-3 py-1 rounded" @onclick="SalvarAlteracoes">Salvar</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Jogo>? jogos;
    private Jogo? jogoEditando;
    private string filtroTitulo = "";
    private string filtroStatus = "";

    protected override async Task OnInitializedAsync()
    {
        await BuscarJogos();
    }

    private async Task BuscarJogos()
    {
        var url = "jogos";
        if (!string.IsNullOrEmpty(filtroStatus) || !string.IsNullOrEmpty(filtroTitulo))
            url += $"?status={filtroStatus}&titulo={filtroTitulo}";

        jogos = await Api.GetAsync<List<Jogo>>(url);
    }

    private void EditarJogo(Jogo jogo)
    {
        jogoEditando = new Jogo
        {
            Id = jogo.Id,
            Titulo = jogo.Titulo,
            Plataforma = jogo.Plataforma,
            Status = jogo.Status,
            Nota = jogo.Nota,
            HorasJogadas = jogo.HorasJogadas,
            Comentarios = jogo.Comentarios
        };
    }

    private void CancelarEdicao() => jogoEditando = null;

    private async Task SalvarAlteracoes()
    {
        if (jogoEditando == null) return;

        await Api.PatchAsync($"jogos/{jogoEditando.Id}", new
        {
            nota = jogoEditando.Nota,
            horasJogadas = jogoEditando.HorasJogadas,
            comentarios = jogoEditando.Comentarios
        });

        jogoEditando = null;
        await BuscarJogos();
    }

    // ✅ Converte número ou texto em nome legível
    private string ObterStatus(string status)
    {
        return status switch
        {
            "0" => "Backlog",
            "1" => "Jogando",
            "2" => "Finalizado",
            "3" => "Platinado",
            _ => status
        };
    }

    // ✅ Modelo robusto para lidar com número ou string no campo status
    public class Jogo
    {
        public Guid Id { get; set; }
        public string Titulo { get; set; } = "";
        public string Plataforma { get; set; } = "";

        [JsonConverter(typeof(IntToStringJsonConverter))]
        public string Status { get; set; } = "";

        public decimal? Nota { get; set; }
        public double? HorasJogadas { get; set; }
        public string? Comentarios { get; set; }
    }
}
