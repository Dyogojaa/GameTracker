@page "/jogos/sem-horas"
@inject ApiClient Api

<h3 class="text-2xl font-bold mb-4">Jogos Sem Horas Registradas</h3>

@if (jogos == null)
{
    <p>Carregando jogos...</p>
}
else if (!jogos.Any())
{
    <div class="p-4 bg-green-100 text-green-800 rounded">
        ✅ Todos os jogos possuem horas registradas!
    </div>
}
else
{
    <table class="min-w-full text-sm border border-gray-700">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="p-2 text-left">Título</th>
                <th class="p-2 text-left">Plataforma</th>
                <th class="p-2 text-left">Status</th>
                <th class="p-2 text-right">Nota</th>
                <th class="p-2 text-right w-32">Horas Jogadas</th>
                <th class="p-2 text-center w-32">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jogo in jogos)
            {
                <tr class="border-b border-gray-600 hover:bg-gray-700">
                    <td class="p-2">@jogo.Titulo</td>
                    <td class="p-2">@jogo.Plataforma</td>
                    <td class="p-2">@jogo.Status</td>
                    <td class="p-2 text-right">@jogo.Nota?.ToString("F1")</td>
                    <td class="p-2 text-right">
                        <input type="number" step="0.5" class="w-20 border rounded px-1 py-0.5 text-right"
                               @bind="jogo.HorasJogadas"
                               @bind:event="oninput" />
                    </td>
                    <td class="p-2 text-center">
                        @if (salvandoId == jogo.Id)
                        {
                            <span class="text-gray-400 italic">Salvando...</span>
                        }
                        else if (ultimoSalvo == jogo.Id)
                        {
                            <span class="text-green-500 font-bold">✔</span>
                        }
                        else
                        {
                            <button class="bg-blue-600 text-white px-2 py-1 rounded"
                                    @onclick="() => SalvarHoras(jogo)">
                                Salvar
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<JogoSemHoras>? jogos;
    private Guid? salvandoId = null;
    private Guid? ultimoSalvo = null;

    protected override async Task OnInitializedAsync()
    {
        await CarregarJogos();
    }

    private async Task CarregarJogos()
    {
        jogos = await Api.GetAsync<List<JogoSemHoras>>("jogos/sem-horas");
    }

    private async Task SalvarHoras(JogoSemHoras jogo)
    {
        if (jogo.HorasJogadas == null || jogo.HorasJogadas <= 0)
            return;

        salvandoId = jogo.Id;
        ultimoSalvo = null;

        var response = await Api.PatchAsync($"jogos/{jogo.Id}", new
        {
            horasJogadas = jogo.HorasJogadas,
            comentarios = $"Horas atualizadas manualmente em {DateTime.Now:dd/MM/yyyy HH:mm}"
        });

        salvandoId = null;

        if (response.IsSuccessStatusCode)
        {
            ultimoSalvo = jogo.Id;
            await Task.Delay(800); // Mostra o check por um tempo
            ultimoSalvo = null;
        }
    }

    public class JogoSemHoras
    {
        public Guid Id { get; set; }
        public string Titulo { get; set; } = string.Empty;
        public string Plataforma { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public decimal? Nota { get; set; }
        public double? HorasJogadas { get; set; }
    }
}
