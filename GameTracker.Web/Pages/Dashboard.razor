@page "/dashboard"
@using GameTracker.API.DTO
@inject ApiClient Api

<h1 class="flex items-center gap-3 text-3xl font-bold mb-6 text-gray-800">
    🎮 Dashboard de Jogos
</h1>

<p class="text-sm text-gray-500 mb-6">
    Atualizado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
</p>

@if (resumo is null)
{
    <p>Carregando dados...</p>
}
else
{
    <!-- Cards de Métricas -->
    <div class="card-grid mb-10">
        <div class="card text-center">
            <div class="text-3xl mb-1">🎯</div>
            <div class="text-lg font-semibold text-gray-800">Total</div>
            <div class="text-2xl font-bold text-emerald-600">@resumo.TotalJogos</div>
        </div>

        <div class="card text-center">
            <div class="text-3xl mb-1">🏆</div>
            <div class="text-lg font-semibold text-gray-800">Finalizados</div>
            <div class="text-2xl font-bold text-emerald-600">@resumo.JogosFinalizados</div>
        </div>

        <div class="card text-center">
            <div class="text-3xl mb-1">📚</div>
            <div class="text-lg font-semibold text-gray-800">Backlog</div>
            <div class="text-2xl font-bold text-amber-600">@resumo.JogosBacklog</div>
        </div>

        <div class="card text-center">
            <div class="text-3xl mb-1">🎮</div>
            <div class="text-lg font-semibold text-gray-800">Jogando</div>
            <div class="text-2xl font-bold text-sky-600">@resumo.JogosJogando</div>
        </div>

        <div class="card text-center">
            <div class="text-3xl mb-1">⭐</div>
            <div class="text-lg font-semibold text-gray-800">Nota Média</div>
            <div class="text-2xl font-bold text-indigo-600">@resumo.NotaMediaGeral.ToString("F1")</div>
        </div>

        <div class="card text-center">
            <div class="text-3xl mb-1">⏱️</div>
            <div class="text-lg font-semibold text-gray-800">Horas Totais</div>
            <div class="text-2xl font-bold text-emerald-600">@((int)resumo.HorasTotais)</div>
        </div>
    </div>

    <!-- Últimos Jogos Finalizados -->
    <section class="mb-10">
        <h2 class="flex items-center gap-2 text-xl font-semibold mb-4 text-gray-800">
            🗓️ Últimos Jogos Finalizados
        </h2>

        @if (resumo.UltimosJogosFinalizados?.Any() == true)
        {
            <ul class="divide-y divide-gray-200 bg-white rounded-lg shadow-sm border border-gray-200">
                @foreach (var jogo in resumo.UltimosJogosFinalizados)
                {
                    <li class="p-4 flex justify-between items-center hover:bg-gray-50 transition-colors">
                        <div>
                            <span class="font-semibold text-gray-800">@jogo.Titulo</span>
                            <span class="text-gray-500 text-sm"> — @jogo.Plataforma</span>
                        </div>
                        <div class="text-sm text-gray-700">
                            ⭐ @(string.Format("{0:F1}", jogo.Nota))
                            <span class="ml-3 text-emerald-700">@((int)jogo.HorasJogadas)h</span>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-gray-500">Nenhum jogo finalizado recentemente.</p>
        }
    </section>

    <!-- Top Jogos -->
    <section>
        <h2 class="flex items-center gap-2 text-xl font-semibold mb-4 text-gray-800">
            🏅 Top Jogos
        </h2>

        @if (resumo.TopJogos?.Any() == true)
        {
            <ul class="divide-y divide-gray-200 bg-white rounded-lg shadow-sm border border-gray-200">
                @foreach (var jogo in resumo.TopJogos)
                {
                    <li class="p-4 flex justify-between items-center hover:bg-gray-50 transition-colors">
                        <div>
                            <span class="font-semibold text-gray-800">@jogo.Titulo</span>
                            <span class="text-gray-500 text-sm"> — @jogo.Plataforma</span>
                        </div>
                        <div class="text-sm text-gray-700">
                            ⭐ @(string.Format("{0:F1}", jogo.Nota))
                            <span class="ml-3 text-emerald-700">@((int)jogo.HorasJogadas)h</span>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-gray-500">Nenhum jogo listado como destaque.</p>
        }
    </section>
}

@code {
    private DashboardResumoDto? resumo;

    protected override async Task OnInitializedAsync()
    {
        resumo = await Api.GetAsync<DashboardResumoDto>("dashboard/resumo");
    }
}
