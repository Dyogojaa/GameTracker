@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-200 flex flex-col text-gray-800 font-sans">

    <!-- Header -->
    <header class="bg-white shadow-md border-b border-gray-300">
        <div class="max-w-7xl mx-auto flex justify-between items-center px-8 py-4">
            <div class="flex items-center gap-2">
                <span class="text-2xl text-blue-500 font-bold">🎮 GameTracker</span>
                <span class="text-sm text-gray-500 italic">KingHyperDyo</span>
            </div>

            <!-- Menu vindo do NavMenu -->
            <NavMenu />

            <div class="text-xs text-gray-500">
                Atualizado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
            </div>
        </div>
    </header>

    <!-- Corpo -->
    <main class="flex-1">
        <div class="max-w-7xl mx-auto bg-white shadow-md rounded-lg mt-6 mb-10 p-8">
            @Body
        </div>
    </main>

    <!-- Rodapé -->
    <footer class="bg-gray-800 text-gray-300 text-center py-3 text-sm">
        © @DateTime.Now.Year GameTracker — Todos os direitos reservados
    </footer>
</div>
